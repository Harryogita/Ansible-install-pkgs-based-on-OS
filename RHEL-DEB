---
 - name: play to install pckgs on Rhel and debian based os-destros
   hosts: localhost
   connection: local
   gather_facts: true
   become: true
   become_method: sudo
   remote_user: harry
   vars_prompt:
          name: pkg_name
          prompt: Enter the pkg_name ??
   tasks:
       - name: Task to install pkgs on Rhel based destros - Centos
         yum: name="{{pkg_name}}" state=latest
         when: ansible_distribution=="RedHat Enterprise linux" OR ansible_distribution=="Centos"
         
       - name: Task to install pkgs on Debian based destros - ubuntu
         apt: name="{{pkg_name}}" state=latest
         
       - name: Task to restart services installed 
         systemd: name="{{pkg_name}}" state=restarted
         
         
       - name:Task to check services status
         shell: 'systemctl status "{{pkg_name}}"'
         register: svs-status
       - debug: svs-status.stdout.lines
       
       
